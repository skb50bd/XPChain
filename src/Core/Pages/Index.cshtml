@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to <b>XPChain</b></h1>
    <p>
        XPChain is a Blockchain-based distributed experience point recording platform.
    </p>
    <div class="row">
        <div class="col-sm-6 xp-area text-right">
            <a asp-page="./Index"
               asp-area="Chain"
               class="btn btn-lg btn-primary">
                XPChain Area
            </a>
        </div>
        <div class="col-sm-6 local-area text-left">
            <a asp-page="./Index"
               asp-area="Local"
               class="btn btn-lg btn-secondary">
                Local Area
            </a>
        </div>
    </div>
</div>
