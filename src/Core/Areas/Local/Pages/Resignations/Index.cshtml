@page 
@using Domain
@model Core.Areas.Local.Pages.Resignations.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="display-4">
                        Local Resignations
                    </h1>
                </div>
                <div class="col-md-6 text-right">
                    <a  asp-page="./Create"
                        class="btn btn-primary text-white">Add New</a>
                </div>
            </div>
        </div>  
        <div class="card-text">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Employee</th>
                        <th>End Date</th>
                        <th>Description</th>
                        <td></td>
                    </tr>
                </thead>  
                <tbody>
                @foreach (var resignation in Model.Resignations)
                {
                    var tblClass = resignation.IsDeployed ? "table-success" : "table-warning";
                    <tr class="@tblClass">
                        <td><code>@resignation.Id</code></td>
                        <td><code>@resignation.EmployeePublicKey.GetLast(30)</code></td>
                        <td>@resignation.EndDate.ToString("dd MMM yyyy")</td>
                        <td>@resignation.Description</td>
                        <td class="text-right">
                            <a asp-page="./Details"
                               asp-route-id="@resignation.Id.ToString()"
                               class="btn btn-sm btn-success">
                                View
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
