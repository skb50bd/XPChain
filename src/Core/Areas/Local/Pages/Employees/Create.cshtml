@page
@model Core.Areas.Local.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "New Local Employee";
}


<div class="card input-card">
    <div class="card-body">
        <div class="card-title">
            <h1 class="display-4">New Local Employee</h1>
        </div>                                           
        <div class="card-text">
            <form method="post">
                <div class="form-group row">
                    <label asp-for="Input.Name"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input asp-for="Input.Name"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.Username"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input asp-for="Input.Username"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.Email"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input asp-for="Input.Email"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.Phone"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input asp-for="Input.Phone"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.Address"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <textarea asp-for="Input.Address"
                                  class="form-control">
                        </textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.Designation"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input asp-for="Input.Designation"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.BirthDate"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input asp-for="Input.BirthDate"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.StartDate"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input asp-for="Input.StartDate"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.PublicKey"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <textarea asp-for="Input.PublicKey"
                               class="form-control"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.IdentificationNumber"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input asp-for="Input.IdentificationNumber"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input type="submit"
                               class="btn btn-primary" value="Save">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
