@page 
@using Domain
@model Core.Areas.Local.Pages.Certifications.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="display-4">
                        Local Certificates
                    </h1>
                </div>
                <div class="col-md-6 text-right">
                    <a  asp-page="./Create"
                        class="btn btn-primary text-white">Add New</a>
                </div>
            </div>
        </div>  
        <div class="card-text">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Receiver</th>
                        <th>Description</th>
                        <td></td>
                    </tr>
                </thead>  
                <tbody>
                @foreach (var certificate in Model.LocalCertificates)
                {
                    var tblClass = certificate.IsDeployed ? "table-success" : "table-warning";
                    <tr class="@tblClass">
                        @*<td>@emp.Id</td>*@
                        <td>@certificate.Id</td>
                        <td>@certificate.Title</td>
                        <td><code>@certificate.ReceiverPublicKey.GetLast(30)</code></td>
                        <td>@certificate.Description</td>
                        <td class="text-right">
                            <a asp-page="./Details"
                               asp-route-id="@certificate.Id.ToString()"
                               class="btn btn-sm btn-success">
                                View
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
