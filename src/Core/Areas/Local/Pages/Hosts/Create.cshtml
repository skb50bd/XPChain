@page
@model Core.Areas.Local.Pages.Hosts.CreateModel
@{
    ViewData["Title"] = "New Host";
}


<div class="card input-card">
    <div class="card-body">
        <div class="card-title">
            <h1 class="display-4">New Host</h1>
        </div>                                           
        <div class="card-text">
            <form method="post">
                <div class="form-group row">
                    <label asp-for="Input.Address"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input asp-for="Input.Address"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.Port"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input asp-for="Input.Port"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.PublicKey"
                           class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <textarea asp-for="Input.PublicKey"
                               class="form-control"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">
                    </label>

                    <div class="col-sm-10">
                        <input type="submit"
                               class="btn btn-primary" value="Save">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
