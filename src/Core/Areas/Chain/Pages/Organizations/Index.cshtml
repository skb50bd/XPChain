@page

@using Domain
@model Core.Areas.Chain.Pages.Organizations.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h1 class="display-4">
                Organizations
            </h1>
        </div>
        <div class="card-text">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Pub. Key</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th class="view-col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var org in Model.Organizations)
                    {
                        <tr>
                            <td><code>@org.Value.Id</code></td>
                            <td>@org.Value.Title</td>
                            <td><code>@org.Value.PublicKey.GetLast(35)</code></td>
                            <td>@org.Value.Email</td>
                            <td>@org.Value.Phone</td>
                            <td class="text-center">
                                <a asp-page="./Details"
                                   asp-route-hash="@org.Key"
                                   class="btn btn-sm btn-success">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
