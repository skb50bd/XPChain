@page
@model Core.Areas.Chain.Pages.Projects.CreateModel
@{
    ViewData["Title"] = "Employee";
}

<div class="card details-card mb-2">
    @*<div class="card-header">
        New Project
    </div>*@
    <div class="card-body">
        <div class="card-title">
            <h1 class="display-4">
                New Project
            </h1>
            </div>

        <div class="card-text">
            <form method="post">
                <div class="form-group row">
                    <label asp-for="Input.Title"
                           class="col-sm-4 col-form-label">
                    </label>

                    <div class="col-sm-8">
                        <input asp-for="Input.Title"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.TotalXp"
                           class="col-sm-4 col-form-label">
                    </label>

                    <div class="col-sm-8">
                        <input asp-for="Input.TotalXp" 
                               type="number"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Input.Description"
                           class="col-sm-4 col-form-label">
                    </label>

                    <div class="col-sm-8">
                        <textarea asp-for="Input.Description"
                               class="form-control">
                        </textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">
                    </label>

                    <div class="col-sm-8">
                        <input type="submit"
                               class="btn btn-primary" 
                               value="Deploy">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<a asp-page="./Index"
   class="btn btn-secondary">
    Back to Index
</a>