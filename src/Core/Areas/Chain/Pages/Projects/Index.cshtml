@page

@using Domain
@model Core.Areas.Chain.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="display-4">
                        Projects
                    </h1>
                </div>
                <div class="col-md-6 text-right">
                    <a asp-page="./Create"
                       class="btn btn-primary text-white">Add New</a>
                </div>
            </div>
        </div>
        <div class="card-text">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Organization</th>
                        <th>Title</th>
                        <th>Total XP</th>
                        <th class="view-col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model.Projects)
                    {
                        <tr>
                            <td><code>@emp.Value.Id</code></td>
                            <td><code>@emp.Value.Organization.GetLast(35)</code></td>
                            <td>@emp.Value.Title</td>
                            <td>@emp.Value.TotalXp</td>
                            <td class="text-center">
                                <a asp-page="./Details"
                                   asp-route-hash="@emp.Key"
                                   class="btn btn-sm btn-success">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
