@page

@using Domain
@model Core.Areas.Chain.Pages.Resignations.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="display-4">
                        Resignations
                    </h1>
                </div>
            </div>
        </div>
        <div class="card-text">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Employee</th>
                        <th>Organization</th>
                        <th>End Date</th>
                        <th>Description</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var res in Model.Resignation)
                    {
                    <tr>
                        @*<td>@emp.Id</td>*@
                        <td><code>@res.Value.Id</code></td>
                        <td><code>@res.Value.Employee.GetLast(30)</code></td>
                        <td><code>@res.Value.Organization.GetLast(30)</code></td>
                        <td>@res.Value.EndDate.ToString("dd MMM yyyy")</td>
                        <td>@res.Value.Description</td>
                        <td class="text-right">
                            <a asp-page="./Details"
                               asp-route-hash="@res.Key"
                               class="btn btn-sm btn-success">
                                View
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
