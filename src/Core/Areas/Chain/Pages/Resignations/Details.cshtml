@page
@model Core.Areas.Chain.Pages.Resignations.DetailsModel
@{
    ViewData["Title"] = "Resignation";
}

<div class="card details-card mb-2">
    <div class="card-header">
        Resignation Details
    </div>
    <div class="card-body">
        <div class="card-text">
            <table class="table table-sm table-striped table-hover">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td class="text-right">
                            <code>
                                @Model.Resignation.Id
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>Hash</th>
                        <td class="text-right">
                            <code>
                                @Model.Block.Hash
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>Previous Block Hash</th>
                        <td class="text-right">
                            <code>
                                @Model.Block.PreviousBlockHash
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Resignation.Employee)</th>
                        <td class="text-right">
                            <code>
                                @Model.Resignation.Employee
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Resignation.Organization)</th>
                        <td class="text-right">
                            <code>
                                @Model.Resignation.Organization
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Resignation.EndDate)</th>
                        <td class="text-right">
                            @Model.Resignation.EndDate.ToString("D")
                        </td>
                    </tr>

                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Resignation.Description)</th>
                        <td class="text-right">
                            @Html.DisplayFor(model => model.Resignation.Description)
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Resignation.EmployeeSignature)</th>
                        <td class="text-right">
                            <code>
                                @Model.Resignation.EmployeeSignature
                            </code>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<a asp-page="./Index"
   class="btn btn-secondary">
    Back to Index
</a>