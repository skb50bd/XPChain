@page
@model Core.Areas.Chain.Pages.UnitsOfWork.DetailsModel
@{
    ViewData["Title"] = "Unit of Work";
}

<div class="card details-card mb-2">
    <div class="card-header">
        Unit of Work Details
    </div>
    <div class="card-body">

        <div class="card-text">
            <table class="table table-sm table-striped table-hover">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td class="text-right">
                            <code>
                                @Model.UnitOfWork.Id
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>Hash</th>
                        <td class="text-right">
                            <code>
                                @Model.Block.Hash
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>Previous Block Hash</th>
                        <td class="text-right">
                            <code>
                                @Model.Block.PreviousBlockHash
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UnitOfWork.Organization)</th>
                        <td class="text-right">
                            <code>
                                @Model.UnitOfWork.Organization
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UnitOfWork.ProjectId)</th>
                        <td class="text-right">
                            <code>
                                @Model.UnitOfWork.ProjectId
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UnitOfWork.Executor)</th>
                        <td class="text-right">
                            <code>
                                @Model.UnitOfWork.Executor
                            </code>
                        </td>
                    </tr>

                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UnitOfWork.Tags)</th>
                        <td class="text-right">
                            @Model.UnitOfWork.Tags
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UnitOfWork.Xp)</th>
                        <td class="text-right">
                            @Model.UnitOfWork.Xp
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UnitOfWork.Description)</th>
                        <td class="text-right">
                            @Html.DisplayFor(model => model.UnitOfWork.Description)
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UnitOfWork.EmployeeSignature)</th>
                        <td class="text-right">
                            <code>
                                @Model.UnitOfWork.EmployeeSignature
                            </code>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<a asp-page="./Index"
   class="btn btn-secondary">
    Back to Index
</a>