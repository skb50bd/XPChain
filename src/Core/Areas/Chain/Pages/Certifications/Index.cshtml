@page

@using Domain
@model Core.Areas.Chain.Pages.Certifications.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="display-4">
                        Certifications
                    </h1>
                </div>
            </div>
        </div>
        <div class="card-text">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Owner</th>
                        <th>Issuer</th>
                        <th>Description</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cert in Model.Certificate)
                    {
                    <tr>
                        @*<td>@emp.Id</td>*@
                        <td><code>@cert.Value.Id</code></td>
                        <td>@cert.Value.Title</td>
                        <td><code>@cert.Value.Owner.GetLast(30)</code></td>
                        <td><code>@cert.Value.Issuer.GetLast(30)</code></td>
                        <td>@cert.Value.Description</td>
                        <td class="text-right">
                            <a asp-page="./Details"
                               asp-route-hash="@cert.Key"
                               class="btn btn-sm btn-success">
                                View
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
